			ОткрытьПанельОшибокКлиент();
		Иначе	
			ИмяФормыВыбора = "Справочник." + ИмяСправочникаТипыЦен + ".ФормаВыбора";
			
			МодульОбъектаКлиент().ОткрытьФорму_КонтурEDI(ИмяФормыВыбора, "", , ЭтаФорма, "ОбработчикВыбораТипаЦен", ЭтаФорма, ДопПараметрПереданныйВОбработчик);
			
		КонецЕсли;
		
