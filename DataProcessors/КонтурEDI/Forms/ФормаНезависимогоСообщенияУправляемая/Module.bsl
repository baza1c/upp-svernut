		СтрокаДляПересчета = Товары.НайтиПоИдентификатору(ИдентификаторТекСтроки);
	ИначеЕсли Не Строка = Неопределено Тогда
		СтрокаДляПересчета = Строка;	
	Иначе
		Возврат;
	КонецЕсли;	

	МодульОбъекта().ПересчитатьСтрокуТоваровНезависимогоСообщения(СтрокаДляПересчета, "ВEDI");	
		
