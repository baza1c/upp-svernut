&НаКлиенте
Процедура ОткрытьФормуТекущейСтроки()
	
	ТекДанные = Элементы.ДеревоДокументов.ТекущиеДанные;
	
	Если НЕ ТекДанные = Неопределено Тогда
		Если ТекДанные.Иконка = 2
			или ТекДанные.Иконка = 3
			или ТекДанные.Иконка = 4
			Тогда  //документ
			
			НоваяМетрика().Категория("СвязанныеСообщения").Выбор("Документ").НаФорме(ЭтаФорма)
			.ДобавитьПеременную("Документ.Представление", ТекДанные.Представление).ПоместитьВОчередь();
			
			Состояние("Открываю форму документа");
			Если Параметры.МодальностьЗапрещена Тогда
				Выполнить("ПоказатьЗначение(,ТекДанные.Ссылка)"); 
			Иначе
				ОткрытьЗначение(ТекДанные.Ссылка);
			КонецЕсли;

		Иначе
			НоваяМетрика().Категория("СвязанныеСообщения").Выбор("Сообщение").НаФорме(ЭтаФорма)
			.ДобавитьПеременную("Сообщение.Представление", ТекДанные.Представление).ПоместитьВОчередь();
			
			Если ЗначениеЗаполнено(ТекДанные.Ссылка) Тогда
				Если ТипСообщенияДоступенСервер(ТекДанные.ТипСообщения) Тогда
					
					Состояние("Открываю форму сообщения");
					СсылкаНаСообщение = ТекДанные.Ссылка;	
					
					Если Лев(ТекДанные.ТипСообщения,2) = "M_" Тогда // Это сообщение Меркурия
						ВыбраннаяСтрока = Новый Структура;
						ВыбраннаяСтрока.Вставить("ТребуемоеДействие", 	"Распечатать ВСД");
						ВыбраннаяСтрока.Вставить("СообщениеСсылка", 	СсылкаНаСообщение);
						ВыбраннаяСтрока.Вставить("ТипСообщения", 		ТекДанные.ТипСообщения);
						ВыбраннаяСтрока.Вставить("Документ", 			ПолучитьРеквизитСсылки(СсылкаНаСообщение,"Документ"));
						
						ФормаМеркурийКлиент = МодульМеркурийКлиент();
						Если Не ФормаМеркурийКлиент = Неопределено Тогда
							ФормаМеркурийКлиент.ОткрытьКарточкуМеркурий(ВыбраннаяСтрока);
						КонецЕсли;
					Иначе
						ПараметрыФормы = Новый Структура;
						ПараметрыФормы.Вставить("СообщениеСсылка",	СсылкаНаСообщение);
						ПараметрыФормы.Вставить("ТипСообщения",		ПолучитьРеквизитСсылки(СсылкаНаСообщение,"ТипСообщения"));
						ПараметрыФормы.Вставить("Направление",		ПолучитьРеквизитСсылки(СсылкаНаСообщение,"Направление"));
						ПараметрыФормы.Вставить("Документ1С",		ПолучитьРеквизитСсылки(СсылкаНаСообщение,"Документ"));
						ПараметрыФормы.Вставить("РежимРаботы",		Параметры.РежимРаботы);
						ПараметрыФормы.Вставить("ТолькоПросмотр",	истина);
						
						МодульОбъектаКлиент().ОткрытьФорму_КонтурEDI("ФормаСообщенияУправляемая", , ПараметрыФормы, ЭтаФорма);
					КонецЕсли;
					
				Иначе
					ТекстПредупреждения = "Недостаточно прав для работы с сообщением";
					Если Параметры.МодальностьЗапрещена Тогда 
						Выполнить("ПоказатьПредупреждение(,ТекстПредупреждения,,""Контур.EDI"")");
					Иначе
						Предупреждение(ТекстПредупреждения,,"Контур.EDI");
					КонецЕсли;
				КонецЕсли;	
			КонецЕсли;	
			
			ОбновитьДеревоДокументов();
			РазвернутьУзлыДерева();
			
		КонецЕсли;
	КонецЕсли;
	
КонецПроцедуры

