  // Формирует и заполняет построитель отчета по регистру "ЦеныНоменклатуры"
//
Процедура ЗаполнитьПостроительОтчетаПоЦенеПоступления(ВключатьНезаполненные, ЗаполнятьТолькоТекстЗапроса) Экспорт
         ТекстЗапроса = "ВЫБРАТЬ
                        |	ДокументНоменклатура.Номенклатура КАК Номенклатура,
                        |	ДокументНоменклатура.ХарактеристикаНоменклатуры КАК ХарактеристикаНоменклатуры,
                        |	ДокументНоменклатура.ЕдиницаИзмерения КАК ЕдиницаИзмерения,
                        |	МАКСИМУМ(ДокументНоменклатура.Цена) КАК Цена,
                        |	Константы.ВалютаУправленческогоУчета КАК Валюта,
                        |	&ТипЦен
                        |ИЗ
                        |	(ВЫБРАТЬ
                        |		Закупки.Номенклатура КАК Номенклатура,
                        |		МАКСИМУМ(Закупки.ДокументЗакупки.Дата) КАК ДокументЗакупкиДата
                        |	ИЗ
                        |		РегистрНакопления.Закупки КАК Закупки
                        |	ГДЕ
                        |		Закупки.Регистратор.Дата >= ДОБАВИТЬКДАТЕ(&ДатаТекущая, ГОД, -1)
                        |		И ТИПЗНАЧЕНИЯ(Закупки.Регистратор) = ТИП(Документ.ПоступлениеТоваровУслуг)
                        |	
                        |	СГРУППИРОВАТЬ ПО
                        |		Закупки.Номенклатура) КАК МаксДата
                        |		ЛЕВОЕ СОЕДИНЕНИЕ (ВЫБРАТЬ
                        |			Закупки.Номенклатура КАК Номенклатура,
                        |			Закупки.ДокументЗакупки.Дата КАК ДокументЗакупкиДата,
                        |			Закупки.Регистратор КАК Регистратор,
                        |			СУММА(Закупки.Количество) КАК Количество,
                        |			СУММА(Закупки.Стоимость) КАК Стоимость,
                        |			СУММА(Закупки.НДС) КАК НДС,
                        |			Закупки.ХарактеристикаНоменклатуры КАК ХарактеристикаНоменклатуры,
                        |			Закупки.Номенклатура.ЕдиницаХраненияОстатков КАК ЕдиницаИзмерения,
                        |			0 КАК ПроцентСкидкиНаценки,
                        |			ВЫБОР
                        |				КОГДА Закупки.Количество = 0
                        |						ИЛИ Закупки.Стоимость = 0
                        |					ТОГДА 0
                        |				ИНАЧЕ ВЫРАЗИТЬ((Закупки.Стоимость - Закупки.НДС) / Закупки.Количество КАК ЧИСЛО(10, 2))
                        |			КОНЕЦ КАК Цена
                        |		ИЗ
                        |			РегистрНакопления.Закупки КАК Закупки
                        |		ГДЕ
                        |			Закупки.Регистратор.Дата >= ДОБАВИТЬКДАТЕ(&ДатаТекущая, ГОД, -1)
                        |			И ТИПЗНАЧЕНИЯ(Закупки.Регистратор) = ТИП(Документ.ПоступлениеТоваровУслуг)
                        |		
                        |		СГРУППИРОВАТЬ ПО
                        |			Закупки.Номенклатура,
                        |			Закупки.ДокументЗакупки.Дата,
                        |			Закупки.Регистратор,
                        |			Закупки.ХарактеристикаНоменклатуры,
                        |			Закупки.Номенклатура.ЕдиницаХраненияОстатков,
                        |			ВЫБОР
                        |				КОГДА Закупки.Количество = 0
                        |						ИЛИ Закупки.Стоимость = 0
                        |					ТОГДА 0
                        |				ИНАЧЕ ВЫРАЗИТЬ((Закупки.Стоимость - Закупки.НДС) / Закупки.Количество КАК ЧИСЛО(10, 2))
                        |			КОНЕЦ) КАК ДокументНоменклатура
                        |		ПО МаксДата.Номенклатура = ДокументНоменклатура.Номенклатура
                        |			И МаксДата.ДокументЗакупкиДата = ДокументНоменклатура.ДокументЗакупкиДата,
                        |	Константы КАК Константы
                        |{ГДЕ
                        |	ДокументНоменклатура.Номенклатура.*,
                        |	ДокументНоменклатура.ХарактеристикаНоменклатуры.*,
                        |	(&ТипЦен)}
                        |
                        |СГРУППИРОВАТЬ ПО
                        |	МаксДата.ДокументЗакупкиДата,
                        |	ДокументНоменклатура.Номенклатура,
                        |	ДокументНоменклатура.ХарактеристикаНоменклатуры,
                        |	ДокументНоменклатура.ЕдиницаИзмерения,
                        |	ДокументНоменклатура.ПроцентСкидкиНаценки,
                        |	Константы.ВалютаУправленческогоУчета
                        |
                        |УПОРЯДОЧИТЬ ПО
                        |	Номенклатура
                        |{УПОРЯДОЧИТЬ ПО
                        |	ДокументНоменклатура.Номенклатура.Артикул}";
	//Запрос.УстановитьПараметр("ДатаТекущая",ТекущаяДата());					
	//Запрос.УстановитьПараметр("ГруппыНоменклатуры",СписокГруппНоменклатуры);	
	
	
	ПостроительОтчета.Текст = ТекстЗапроса;
	ПостроительОтчета.Параметры.Вставить("ДатаТекущая", 	ТекущаяДата());
	ПостроительОтчета.Параметры.Вставить("ТипЦен", 			Справочники.ТипыЦенНоменклатуры.НайтиПоКоду("000002382"));
	//ПостроительОтчета.Параметры.Вставить("Номенклатура", 	мСписокНоменклатуры);

	МассивОтбора = Новый Массив;
	
	МассивОтбора.Добавить("Номенклатура");
		
	УправлениеОтчетами.ЗаполнитьОтбор(МассивОтбора, ПостроительОтчета);

	ЗаполнитьОбщиеПараметрыПостроителяОтчета();
    
	 
