
&НаКлиенте
Процедура Загрузить(Команда)
	Если ИмяЛиста = "" Тогда
		Сообщить("Не заполнено имя листа Excel");
		Возврат
	КонецЕсли;
	
	Если ИмяФайла = "" Тогда
		Сообщить("Не заполнено имя файла Excel");
		Возврат
	КонецЕсли;
	
	Если НачальнаяДатаПлана = Дата("00010101000000") Тогда
		Сообщить("Не заполнена начальная дата");
		Возврат
	КонецЕсли;


	
	Ф=Новый Файл(СокрЛП(ИмяФайла));
	Если Ф.Существует()=0 Тогда
		Сообщить("Указанный файл не существует!");
		Возврат;
	КонецЕсли;
	ВыбФайл = Новый Файл(ИмяФайла);	
	ДвоичныйФайл = ПоместитьВоВременноеХранилище ( Новый ДвоичныеДанные(ИмяФайла),ЭтаФорма.УникальныйИдентификатор); 

	ЭтаФорма.Закрыть(ПолучитьФайлНаСервере(ДвоичныйФайл));

КонецПроцедуры

&НаСервере
Функция ПолучитьФайлНаСервере(ДвоичныйФайл);
	
	ДанныеДокумента = ПолучитьИзВременногоХранилища(ДвоичныйФайл);
	ИмяФайлаДляЗагрузки = КаталогВременныхФайлов()+"temp" + ID + РасширениеФайла;
	ДанныеДокумента.Записать(ИмяФайлаДляЗагрузки);

	
	ФайлEXCEL = ИмяФайлаДляЗагрузки ;
	ИмяЛиста = ИмяЛиста;
	КолвоСтрокExcel = 1;
	ДанныеИзФайла = ЗагрузитьМетодом_MSADODB(ФайлEXCEL,ИмяЛиста,1,,, КолвоСтрокExcel,"MicrosoftACEOLEDB12");
	
	КоличествоСтолбцов = ДанныеИзФайла.Количество();
	
	КЧ = Новый КвалификаторыЧисла(12,2);
	Массив = Новый Массив;
	Массив.Очистить();
	Массив.Добавить(Тип("Число"));
	ОписаниеТиповЧ = Новый ОписаниеТипов(Массив, , ,КЧ);
	
	ДанныеДляЗагрузки = Новый ТаблицаЗначений;
	ДанныеДляЗагрузки.Колонки.Добавить("Номенклатура");             
	ДанныеДляЗагрузки.Колонки.Добавить("Дата");
    ДанныеДляЗагрузки.Колонки.Добавить("Количество",ОписаниеТиповЧ);
	ДанныеДляЗагрузки.Колонки.Добавить("ЭкстраЗаказ");

	Для каждого СтрокаДанных из ДанныеИзФайла Цикл
				
		Номенклатура =  Справочники.Номенклатура.НайтиПоРеквизиту("Артикул",  СтрокаДанных[0]);
				
		Если НЕ Номенклатура = Справочники.Номенклатура.ПустаяСсылка() Тогда
			СтрокаДанныеДляЗагрузки = ДанныеДляЗагрузки.Добавить();
			СтрокаДанныеДляЗагрузки.Номенклатура = Номенклатура;
			СтрокаДанныеДляЗагрузки.ЭкстраЗаказ  = Истина;
            СтрокаДанныеДляЗагрузки.Дата         = НачальнаяДатаПлана;
            СтрокаДанныеДляЗагрузки.Количество   = СтрокаДанных[4];

			НомерСтолбца = 5;
			ДатаПлана = НачальнаяДатаПлана;
			Пока НомерСтолбца <= КоличествоСтолбцов	Цикл
				ДатаПлана = ДатаПлана + + 86400;
				Если СтрокаДанных[НомерСтолбца-1] <> Неопределено Тогда 
					СтрокаДанныеДляЗагрузки = ДанныеДляЗагрузки.Добавить();
					СтрокаДанныеДляЗагрузки.Номенклатура = Номенклатура;
					СтрокаДанныеДляЗагрузки.ЭкстраЗаказ  = Ложь;
		            СтрокаДанныеДляЗагрузки.Дата         = ДатаПлана  ;
		            СтрокаДанныеДляЗагрузки.Количество   = Формат(СтрокаДанных[НомерСтолбца-1],"ЧЦ=7; ЧДЦ=2");
				КонецЕсли;
				НомерСтолбца = НомерСтолбца + 1;
			КонецЦикла;
		КонецЕсли;
	КонецЦикла;	
	
	
	Если ДанныеДляЗагрузки.Количество()> 0 Тогда
		Сообщить("Загруженно " + ДанныеДляЗагрузки.Количество() + " строк." ) ;

	КонецЕсли;
	Возврат ДанныеДляЗагрузки;
КонецФункции

