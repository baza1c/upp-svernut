	МодельВыгрузки.ЗаписатьНачалоЭлемента("НалСт");
		ЗаписатьАтрибут(МодельВыгрузки, "НалСтВел", СтавкаНДС, "Т, 7, , О");
		ЗаписатьАтрибут(МодельВыгрузки, "НалСтТип", ТипСтавки, "Т, 7, , О");
