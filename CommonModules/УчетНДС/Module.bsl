	ДанныеДляПечати.Вставить("СтатусУПД", 			 2);
	// {Лео Катанович
	ДанныеДляПечати.Вставить("ИдентификаторГосКонтракта", ДанныеДокумента.ДоговорКонтрагента.Лео_ИГК); 
	// Лео Катанович}
	Возврат ДанныеДляПечати;
	
