		Строчка.СуммаВключаетНДС 	= Истина;
		Строчка.СуммаНДС  			= УчетНДС.РассчитатьСуммуНДС(СуммаДляПечати, Истина, Истина, УчетНДС.ПолучитьСтавкуНДС(Шапка.СтавкаНДС));
